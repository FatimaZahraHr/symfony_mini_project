<!DOCTYPE html>
<html>
    <head>
   {% include 'base.html.twig'%}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">


        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
       
    </head>
   
  {% include 'menu.html.twig'%}
    <body>

  {% block body %}

<div class="jumbotron text-center" >
  <h1 style="color:white">Les projets internes de l'agence</h1>
  <p style="color:white">Voici nos projets!</p> 
</div>
<div class="container">
    {% for project in projects %}
         {% set url=path('projet_show',{'nomprojet': project.nomprojet}) %}
<ul class="list-group">
  <a href="{{url}}" class="list-group-item"><b>{{ project.nomprojet}} </b><span class="badge"><b> {{ project.idclient.nom}}</b></span></a>
</ul>
  {% endfor %}
  <center>
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="{{ path('homepage',{'page': page - 1}) }}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {% for i in 1.. pages %}
    <li class="page-item {%if page == i %}active{% endif %}">
    <a class="page-link" href="{{ path('homepage',{'page': i}) }}">{{ i }}</a>
    </li>
  {% endfor %}
    <li class="page-item">
      <a class="page-link" href="{{ path('homepage',{'page': page + 1}) }}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</center>
</div>
 {% endblock %}
        {% block javascripts %}{% endblock %}
        {% include 'footer.html.twig'%}
    </body>
</html>
